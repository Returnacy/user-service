{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@user-service/types": ["../types/src/index.ts"],
      "@user-service/db": ["../db/src/index.ts"]
    },
    "tsBuildInfoFile": "dist/.tsbuildinfo",
    "isolatedModules": true,
  },
  "references": [
    { "path": "../types" },
    { "path": "../db" }
  ],
  "include": ["src", "src/types", "tests"],
  "exclude": ["dist"]
}
