    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^1.6.1"
  },
  "dependencies": {
    "@fastify/cors": "^11.1.0",
    "@prisma/client": "6.14.0",
    "@user-service/db": "workspace:*",
    "@user-service/types": "workspace:*",
    "fastify": "^5.5.0",
    "fastify-plugin": "^5.0.1",
    "tsconfig-paths": "^4.2.0",
    "jose": "^6.0.13",
    "zod": "^4.1.0",
    "axios": "^1.11.0"
  }
